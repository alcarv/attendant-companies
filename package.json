{
  "name": "attendant-companies",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": "24.13.0"
  },
  "workspaces": [
    "apps/web",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm -C apps/web dev",
    "dev:web": "pnpm -C apps/web dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "db:generate": "pnpm -C packages/db db:generate",
    "db:migrate": "pnpm -C packages/db db:migrate"
  },
  "devDependencies": {
    "turbo": "^2.7.5"
  }
}
